// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum ProductStatus {
  ACTIVE
  INACTIVE
  OUT_OF_STOCK
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String
  role      Role      @default(USER)
  avatar    String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  products  Product[]

  @@map("users")
}

model Category {
  id        String    @id @default(uuid())
  name      String    @unique
  slug      String    @unique
  createdAt DateTime  @default(now())

  products  Product[]

  @@map("categories")
}

model Product {
  id          String        @id @default(uuid())
  name        String
  description String?
  price       Float
  cost        Float
  stock       Int           @default(0)
  status      ProductStatus @default(ACTIVE)
  image       String?
  sku         String?       @unique

  category    Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId  String

  createdBy   User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  sales       Sale[]

  @@map("products")
}

model Sale {
  id        String   @id @default(uuid())
  quantity  Int
  totalPrice Float
  saleDate  DateTime @default(now())

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  @@map("sales")
}
